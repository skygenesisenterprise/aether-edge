# Production Environment Variables for Aether Edge
# Copy this file to .env and update with your values

# Security
SERVER_SECRET=your-very-secure-secret-key-generate-with-openssl-rand-hex-32
POSTGRES_PASSWORD=your-secure-database-password

# Domain Configuration
DASHBOARD_URL=https://your-domain.com
DOMAIN_NAME=your-domain.com

# Email Configuration (for Let's Encrypt)
ACME_EMAIL=admin@your-domain.com

# Logging Configuration
LOG_LEVEL=info
GERBIL_LOG_LEVEL=info
TRAEFIK_LOG_LEVEL=INFO

# Optional Monitoring (uncomment to enable)
# GRAFANA_PASSWORD=your-grafana-password

# Build Configuration
BUILD_TYPE=enterprise
DATABASE_TYPE=postgresql

# Performance Tuning
NODE_OPTIONS=--max-old-space-size=4096

# Feature Flags
REQUIRE_EMAIL_VERIFICATION=true
DISABLE_SIGNUP_WITHOUT_INVITE=false
DISABLE_USER_CREATE_ORG=false
ALLOW_RAW_RESOURCES=false
ENABLE_INTEGRATION_API=true
ENABLE_CLIENTS=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=24h

# Database Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true