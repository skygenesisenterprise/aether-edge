# Production Environment Variables Template
# Copy this to .env.production and customize for your environment

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Server secret key (generate with: openssl rand -hex 32)
SERVER_SECRET=your-very-secure-secret-key-change-this-in-production

# Database password (generate with: openssl rand -base64 32)
POSTGRES_PASSWORD=your-secure-database-password-change-this

# Session encryption key
SESSION_SECRET=your-session-secret-key-change-this

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Public dashboard URL (must include https://)
DASHBOARD_URL=https://your-domain.com

# Primary domain name
DOMAIN_NAME=your-domain.com

# Email for Let's Encrypt certificates
ACME_EMAIL=admin@your-domain.com

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build type: oss, saas, enterprise
BUILD_TYPE=enterprise

# Database type: sqlite, pg
DATABASE_TYPE=postgresql

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Application log level: debug, info, warn, error
LOG_LEVEL=info

# Gerbil service log level
GERBIL_LOG_LEVEL=info

# Traefik log level: DEBUG, INFO, WARN, ERROR
TRAEFIK_LOG_LEVEL=INFO

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Require email verification for new users
REQUIRE_EMAIL_VERIFICATION=true

# Disable public signup (invite only)
DISABLE_SIGNUP_WITHOUT_INVITE=false

# Prevent users from creating organizations
DISABLE_USER_CREATE_ORG=false

# Allow raw TCP/UDP resources
ALLOW_RAW_RESOURCES=false

# Enable integration API
ENABLE_INTEGRATION_API=true

# Enable client management
ENABLE_CLIENTS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Node.js memory limit
NODE_OPTIONS=--max-old-space-size=4096

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# Cache configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# Session timeout
SESSION_TIMEOUT=24h

# File upload limits
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# API configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Security headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true

# =============================================================================
# MONITORING CONFIGURATION (OPTIONAL)
# =============================================================================

# Uncomment to enable monitoring
# GRAFANA_PASSWORD=your-grafana-password
# PROMETHEUS_RETENTION=200h

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# Custom SSL certificates (optional)
# SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
# SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# =============================================================================
# DEVELOPMENT OVERRIDES (COMMENT OUT IN PRODUCTION)
# =============================================================================

# Uncomment for development
# LOG_LEVEL=debug
# REQUIRE_EMAIL_VERIFICATION=false
# DISABLE_SIGNUP_WITHOUT_INVITE=false

# =============================================================================
# EXAMPLES
# =============================================================================

# Enterprise deployment with PostgreSQL:
# BUILD_TYPE=enterprise
# DATABASE_TYPE=postgresql
# SERVER_SECRET=$(openssl rand -hex 32)
# POSTGRES_PASSWORD=$(openssl rand -base64 32)

# SaaS deployment with SQLite:
# BUILD_TYPE=saas
# DATABASE_TYPE=sqlite
# SERVER_SECRET=$(openssl rand -hex 32)

# High-security deployment:
# REQUIRE_EMAIL_VERIFICATION=true
# DISABLE_SIGNUP_WITHOUT_INVITE=true
# ALLOW_RAW_RESOURCES=false
# RATE_LIMIT_REQUESTS=50
# SESSION_TIMEOUT=8h